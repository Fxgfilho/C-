#include <iostream>

using namespace std;

int main()
{
    double n1, n2, n3, n4;
    cout << "Digite sua primeira nota >>>  ";
    cin >> n1;
    cout << "Digite sua segunda nota >>>  ";
    cin >> n2;
    cout << "Digite sua terceira nota >>>  ";
    cin >> n3;
    cout << "Digite sua quarta nota >>>  ";
    cin >> n4;

    double media;
    media = (n1+n2+n3+n4)/4;
    cout << "Sua media eh de: " << media << endl << endl;

    if(media >= 7)
    {
        cout << "Aprovado" << endl;
    }

    {
        cout << "Reprovado" << endl;
    }
    system("pause");
    return 0;
}
