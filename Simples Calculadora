#include <iostream>

using namespace std;

int main()
{
    int n1, n2;

    cout << "Digite o primeiro numero: " << endl;
    cin >> n1;
    cout << "Digite o segundo numero: " << endl;
    cin >> n2;

    cout << "A soma eh: " << n1 + n2 << endl;
    cout << "A diferenca eh: " << n1 - n2 << endl;
    cout << "O produto eh: " << n1 * n2 << endl;
    cout << "A divisao eh: " << n1 / n2 << endl;

    system("pause");
    return 0;
}
