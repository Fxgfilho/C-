#include <iostream>

using namespace std;

int main()
{
    double n1, n2, n3, n4;
    cout << "Digite sua primeira nota >>>";
    cin >> n1;
    cout << "Digite sua segunda nota >>>";
    cin >> n2;
    cout << "Digite sua terceira nota >>>";
    cin >> n3;
    cout << "Digite sua quarta nota >>>";
    cin >> n4;

    double media;
    media = (n1+n2+n3+n4)/4;
    if(media<7)
        cout << "Sua media eh de: " << media << " ,voce esta reprovado" << endl;
    else
        cout << "Sua media eh de: " << media << " ,voce esta aprovado" << endl;

    system("pause");
    return 0;
}
